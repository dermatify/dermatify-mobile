<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Dermatify" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/white_background</item>
        <item name="android:navigationBarColor">@color/white_background</item>
        <item name="android:statusBarColor">@color/white_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@color/black</item>
    </style>

    <style name="Fab.BotNavBar" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">3dp</item>
        <item name="android:outlineAmbientShadowColor" tools:targetApi="p">@color/black</item>
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/black</item>
    </style>
    <style name="BotAppBar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="elevation">0dp</item>
    </style>
    <style name="BotNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
    </style>

    <style name="Theme.Dermatify" parent="Base.Theme.Dermatify" />
</resources>